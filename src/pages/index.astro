---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { SITE, HOME, SOCIALS } from "@consts";


const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

const work = [
  {
    title: "Data Engineer",
    company: "Solita",
    duration: "Mar 2025 - Current",
    location: "Stockholm, Stockholm County, Sweden",
    description: "",
    keySkills: ["Terraform", "DevOps", "plus 3 additional skills (not listed)"]
  },
].slice(0, SITE.NUM_WORKS_ON_HOMEPAGE);

---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      Liam Tabibzadeh
    </h4>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            Data engineer. Data scientist. Runner. Swimmer. Minimalist. Optimist.<br><br>
            I love to both build and break things. I am motivated by challenging projects with self-guided research and dynamic problem solving. My true passion is crafting simple yet creative software.<br><br>
            This is my personal space, where I share my work and projects.
          </p>
        </article>
      </section>


      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Work
          </h5>
          <a href="/work" class="text-sm font-semibold hover:text-black hover:dark:text-white transition-colors duration-300 ease-in-out">
            See all work
          </a>
        </div>
        <ul class="flex flex-col space-y-4">
          {work.map(entry => (
            <li>
              <div class="font-semibold text-black dark:text-white">
                {entry.company}
              </div>
              <div class="text-sm opacity-75">
                {entry.title}
              </div>
              <div class="text-sm opacity-75">
                {entry.duration}
              </div>
              <div class="mt-6">
                Currently, I am a data engineer at Solita where I design and develop data pipelines and workflows.
              </div>
              {entry.description && (
                <article class="text-sm mt-2">
                  <p>{entry.description.substring(0, 150)}...</p>
                </article>
              )}
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Recent projects
          </h5>
          <a href="/projects" class="text-sm font-semibold hover:text-black hover:dark:text-white transition-colors duration-300 ease-in-out">
            See all projects
          </a>
        </div>
        <ul class="flex flex-col gap-4">
          {projects.map(project => (
            <li>
              <ArrowCard entry={project} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate">
        <h5 class="font-semibold text-black dark:text-white">
          Let's Connect
        </h5>
        <article class="mt-4">
          <p>
            If you want to get in touch with me about something or just to say hi,
            reach out on social media or send me an email.
          </p>
        </article>
        <div class="flex flex-col space-y-4 mt-8">
          <div class="flex gap-4">
            <Link href="https://github.com/liamtabibzadeh" external aria-label="GitHub">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="hover:opacity-75 transition-opacity">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
            </Link>
            <Link href="https://www.linkedin.com/in/liamtabibzadeh" external aria-label="LinkedIn">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="hover:opacity-75 transition-opacity">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </Link>
          </div>
          <div>
            {SITE.EMAIL}
          </div>
        </div>
      </section>
    </div>
  </Container>
</PageLayout>
