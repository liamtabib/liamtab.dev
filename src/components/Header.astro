---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <Link href="/" underline={false}>
        <div class="flex items-center gap-3">
          <div class="group">
            <svg 
              id="brand" 
              width="32" 
              height="32" 
              viewBox="0 0 180 180"
              class="transition-all duration-300 ease-in-out group-hover:scale-110"
            >
              <circle id="bg" cx="90" cy="90" r="90" class="fill-zinc-900 dark:fill-zinc-100"></circle>
              <path id="left-ear" class="fill-zinc-100 dark:fill-zinc-900" d="M17 180L60 34L127 180H17Z"></path>
              <path id="right-ear" class="fill-zinc-100 dark:fill-zinc-900" d="M163 180L120 34L53 180H163Z"></path>
              <circle id="head" r="37.5" cx="90.5" cy="111.5" class="fill-zinc-100 dark:fill-zinc-900"></circle>
              <ellipse rx="7.5" id="left-eye" cx="77.5" cy="112" ry="15" class="fill-zinc-900 dark:fill-zinc-100 transition-[ry] duration-150 ease-in-out"></ellipse>
              <ellipse id="right-eye" rx="7.5" cx="103.5" cy="112" ry="15" class="fill-zinc-900 dark:fill-zinc-100 transition-[ry] duration-150 ease-in-out"></ellipse>
            </svg>
          </div>
        </div>
      </Link>
      <nav class="flex items-center">
        <Link href="/work" underline={false}>
          <span class="px-2">work</span>
        </Link>
        <Link href="/projects" underline={false}>
          <span class="px-2">projects</span>
        </Link>
        <div class="flex flex-wrap gap-1 items-center ml-4">
          <button
            id="theme-toggle"
            aria-label="Toggle theme"
            class="group size-8 flex items-center justify-center rounded-full"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="group-hover:stroke-black group-hover:dark:stroke-white transition-colors duration-300 ease-in-out"
            >
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
          </button>
        </div>
      </nav>
    </div>
  </Container>
</header>
